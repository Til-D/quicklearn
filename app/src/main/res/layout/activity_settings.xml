<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp">

    <LinearLayout
        style="@style/width_match_parent_max_400"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="@string/settings_title"
            android:textSize="16sp" />


        <!-- LANGUAGE-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_language">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_settings_language">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_language"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_settings_language" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_source_language"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_source_language"
                        android:enabled="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_language_source"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_target_language"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_target_language"
                        android:enabled="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_language_target"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- LEARNING MODE-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_learning">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_settings_learning">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_learning"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_settings_learning" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_learning_mode"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_learning_mode"
                        android:enabled="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_learning_mode"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_notifications">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_settings_notifications">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_notifications"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_settings_notifications" />

                    <Button
                        android:id="@+id/button_trigger_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/settings_test_notification"
                        android:textColor="@color/button_text"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_study">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_settings_study">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_study"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_settings_study" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_data_consent"
                        android:id="@+id/checkbox_data_consent"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_device">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_settings_device">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_device_info"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_settings_device" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_device_uid"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_device_uid"
                        android:enabled="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_device_uid"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_app_version"
                        android:enabled="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_last_log_upload"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_settings_last_log_upload"
                        android:enabled="true" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>