<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp">

    <LinearLayout
        style="@style/width_match_parent_max_400"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_statistics">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_statistics">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics_title"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/statistics_title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics_none"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_statistics_total"
                        android:enabled="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statistics_none"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_statistics_pct"
                        android:enabled="true" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/button_divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!--<Button-->
                        <!--android:id="@+id/button_translate"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:text="@string/button_translate"-->
                        <!--android:textColor="@color/button_text"-->
                        <!--android:background="?attr/selectableItemBackground"-->
                        <!--android:layout_weight="1"/>-->

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/container_settings_device">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/layout_statistics_vocabulary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_statistics_vocabulary"
                        android:textSize="@dimen/abc_text_size_headline_material"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/text_statistics_vocabulary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_device_uid"
                        android:textSize="18sp"
                        android:textColor="@android:color/secondary_text_light"
                        android:id="@+id/text_statisics_vocabulary_size"
                        android:enabled="true" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>